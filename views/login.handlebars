<link rel="stylesheet" href="/../styles/form.css">
<div class="d-flex justify-content-center align-items-center flex-column">
        <section class="container-fluid main-title">
            <h1 class="text-center">Welcome, user!</h1>
        </section>
        <section class="container-fluid main-area">
            <div class="row no-gutters">
                <div class="col-xl-6 col-lg-6 col-md-10 col-sm-10 col-xs-10 mx-auto">
                    <div class="container form-area p-3">
                        <form class="submit-user-login p-3">
                            <div class="form-group">
                                <label for="username">Username:</label>
                                <input required type="text" class="form-control" id="username"
                                    aria-describedby="userName" />
                            </div>
                            <div class="form-group">
                                <label for="password">Password:</label>
                                <input class="form-control" id="password" rows="3" required>
                            </div>
                            <small class="error-msg invisible">Incorrect user/password</small>
                            <button type="submit" class="btn btn-secondary d-block">Submit</button>
                        </form>
                        <div class="text-right">
                            <a href="/signup">Sign up</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>


  <script src="../../js/auth.js"></script>